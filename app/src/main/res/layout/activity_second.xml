<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_second_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_second_view_ico"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorButtonsMainScreen"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_second_view_name_ico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_second_view_ico"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:background="@color/colorButtonsMainScreenShadow2"
            android:gravity="center"
            android:text="Name ico"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>
</RelativeLayout>